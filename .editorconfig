root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
insert_final_newline = true
trim_trailing_whitespace = true

# Prevent semicolons in TypeScript files (for compatible editors/linters)
[*.ts]
quote_type = single
semicolon = false

[*.tsx]
quote_type = single
semicolon = false
